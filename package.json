  "scripts": {
    "build": "hardhat compile",
    "chainlinkV2Plus:init": "hardhat run ./scripts/chainlinkV2Plus/init-chainlink.ts --network besu",
    "clean": "hardhat clean --global",
    "coverage": "hardhat coverage",
    "deploy:mainnet": "hardhat --network mainnet deploy",
    "docker:bootstrap": "lerna bootstrap --hoist --ignore-scripts",
    "docker:build": "lerna run build --concurrency 1",
    "docker:up": "docker compose up -d",
    "docker:up:besu": "docker compose up -d besu explorer",
    "flatten": "sh ./scripts/flatten.sh",
    "lint": "eslint . --fix",
    "precommit": "lint-staged",
    "prepare": "husky",
    "prepare:contracts:besu": "hardhat --network besu run ./scripts/deploy-dev.ts",
    "prepare:env": "sh ./scripts/set-env.sh development",
    "prettier": "prettier . --write",
    "solhint": "solhint -f table ../../contracts/**/*.sol --fix --noPrompt",
    "test": "NODE_ENV=test hardhat test"
  },
